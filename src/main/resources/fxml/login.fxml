<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="400" prefHeight="300"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 40;"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.LoginController">

    <Label text="Connexion" />
    <TextField fx:id="usernameField" promptText="Nom d'utilisateur" prefHeight="40"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe" prefHeight="40"/>
    <Button fx:id="loginButton" text="Se connecter" />
</VBox>
