<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.DashboardController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Recherche + actions -->
    <HBox spacing="40" alignment="TOP_LEFT">
        
        <VBox spacing="10">
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher..." />
                <ComboBox fx:id="searchTypeComboBox" />
            </HBox>
            <HBox spacing="10">
                <Button fx:id="profileButton" text="Modifier étudiant" />
                <Button fx:id="chartButton" text="Graphique" />
            </HBox>
        </VBox>

        <VBox spacing="10" alignment="TOP_CENTER">
            <HBox spacing="10">
                <Button fx:id="importButton" styleClass="ImportExportButton" text="Import" />
                <Button fx:id="exportButton" styleClass="ImportExportButton" text="Export" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="prevPageButton" styleClass="PageButton" text="←" />
                <Button fx:id="nextPageButton" styleClass="PageButton" text="→" />
            </HBox>
        </VBox>
    </HBox>

    <!-- tableau -->
    <TableView fx:id="studentTableView" prefHeight="400" />

</VBox>
